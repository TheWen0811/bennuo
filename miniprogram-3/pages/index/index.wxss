/**index.wxss**/
page{
  overflow: hidden;
}
.text{
  font-size:32rpx; 
  width:100% ;
  height: 100rpx;
  display:flex;
  align-items:center;    
 justify-content:center; 
 margin-top: 150rpx;
 color: orangered;
}
.slide{
  width: 650rpx;
  margin: 0rpx auto;
  margin-top: 0rpx;
}
.task_test{
 text-align: center;
 margin: 30rpx auto;
 line-height: 50rpx;
}
.task_title{
 font-size:35rpx;
  height: 60rpx;
  line-height: normal;
  margin-top: 30rpx;
  margin-bottom: 10rpx;
}
.task_desc{
   color: #C0C0C0 ;  
   font-size:32rpx; 
  height: 50rpx;
line-height: 50rpx;
}
.task_cate{
  width: 660rpx;
  display:flex;
  flex-wrap: wrap;
  margin-bottom: 40rpx;
  margin: 35rpx;
  margin-top: 70rpx;
}
.cate_item{
  width: 1080rpx;
  height: 130rpx;
 text-align: center;
}
.cate_icon{
   height:70rpx;
}
/* .cate_icon image{
  width: 50rpx;
  height: 50rpx;
  margin-top: 15rpx;
} */
.cate_text{
  height:110rpx;
  line-height: 80rpx;
  font-size:40rpx;
  border:2rpx solid #FE9900;
  border-radius:30rpx;
  background-color:#FE9900;
}
.cate_text_active{
  color: #faf7f5;
}
.start{
  width: 280rpx;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  margin:100rpx auto;
  border:2rpx solid #FE9900;
  color: #E7624F;
  border-radius:20rpx;
}
.clock {
  height: 3000rpx;
  overflow:hidden;
  background-color: #FF9936;
}
.progress{
  width:400rpx ;
  height: 400rpx;
  background-color:#FF9936 ;
  margin: 140rpx auto;
  position: relative;
}
.progress_bg,.progress_active {
  width:400rpx;
  height:400rpx;
  position:absolute;
}

.progress .progress_text {
  width:160rpx;
  height:60rpx;
  color:#fff;
  position:absolute;
  text-align:center;
  top:170rpx;
  left:120rpx;
}
.okBtn,.pauseBtn,.continueBtn ,.cancelBtn {
  text-align: center;
  width:280rpx;
  height:75rpx;
  line-height:80rpx;
  color:#fff;
  border:3rpx solid #fff;
  border-radius: 20rpx;
  margin:0 auto 15rpx auto;
  color:#fff
}
